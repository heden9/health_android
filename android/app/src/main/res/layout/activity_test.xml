<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:text="未设置"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:id="@+id/user"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/user"
        android:background="#eee7bdbd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/birth"
        android:background="#eee7bdbd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/gender"
        android:background="#eee7bdbd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/blood"
        android:background="#eee7bdbd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/skin"
        android:background="#eee7bdbd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/chair"
        android:background="#eee7bdbd"/>
    <TextView
        android:text="出生日期"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@+id/user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/birth" />

    <TextView
        android:text="性别"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gender"
        android:layout_below="@+id/birth" />

    <TextView
        android:text="血型"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@+id/gender"
        android:layout_alignRight="@+id/gender"
        android:layout_alignEnd="@+id/gender"
        android:id="@+id/blood" />

    <TextView
        android:text="日光反应型皮肤类型"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@+id/blood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/skin" />

    <TextView
        android:text="轮椅"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@+id/skin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/chair" />

    <TextView
        android:text="未设置"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/birth1"
        android:layout_alignBottom="@+id/birth"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:text="未设置"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/gender1"
        android:layout_alignBottom="@+id/gender"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:text="未设置"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/blood1"
        android:layout_alignBottom="@+id/blood"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/gender1" />

    <TextView
        android:text="未设置"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/skin1"
        android:layout_alignBottom="@+id/skin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:text="未设置"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/chair1"
        android:layout_alignBottom="@+id/chair"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:text="编辑"
        android:textSize="20sp"
        android:textColor="#f60000"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/editor" />

    <Button
        android:text="Flash"
        android:textSize="20sp"
        android:textColor="#f60000"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:id="@+id/close"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="70sp"
        android:layout_height="70sp"
        app:srcCompat="@mipmap/x"
        android:id="@+id/imageView"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/close"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
